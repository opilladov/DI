<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen de paisaje"
        android:textSize="24sp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/descripci贸n"
        android:gravity="center"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/imagen"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/descripci贸n"
        android:layout_marginTop="20dp"
        app:shapeAppearanceOverlay="@style/CircularImage"/>

    <TextView
        android:id="@+id/descripci贸n"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Esta imagen es un fondo de pantalla"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/titulo"
        app:layout_constraintStart_toEndOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/me_gusta_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me gusta"
        app:layout_constraintTop_toBottomOf="@id/descripci贸n"
        app:layout_constraintStart_toEndOf="@id/imagen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
